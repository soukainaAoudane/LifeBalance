<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Ligne verticale de statut -->
        <View
            android:id="@+id/indicatorStatut"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/indicator_statut"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- En-tête avec statut -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Statut -->
                <TextView
                    android:id="@+id/tvStatut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="À faire"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:textStyle="bold"/>

                <!-- Date -->
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2024"
                    android:textSize="12sp"
                    android:textColor="#888888"/>
            </LinearLayout>

            <!-- Titre -->
            <TextView
                android:id="@+id/tvTitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre de la tâche"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description de la tâche..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"/>

            <!-- Boutons d'action -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <!-- Bouton Modifier -->
                <Button
                    android:id="@+id/btnModifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modifier"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/button_modifier"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"/>

                <!-- Bouton Supprimer -->
                <Button
                    android:id="@+id/btnSupprimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supprimer"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/button_supprimer"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>